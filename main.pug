// ---- --- --- MIXINS --- --- --- ---
mixin tableElement(title, count, unit)
    .table__item
        h5.table__title=title
        .table__info
            .table__info-count=count
            .table__info-unit=unit
mixin star(text)
    .constellation__star
        .constellation__star-circle
        p.constellation__star-text=text


