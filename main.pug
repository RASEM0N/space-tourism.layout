main#fullpage
    header#header.page.header
        .container
            .header__inner
                .header__top
                    nav.menu.header__menu
                        ul.menu__list
                            li.menu__item.menu__item_actived
                                a(href="#about-us").menu__link О нас
                            li.menu__item
                                a(href="#special").menu__link Стоимость
                            li.menu__item
                                a(href="#additional").menu__link Доп. услуги
                            li.menu__item
                                a(href="#contacts").menu__link Гарантии
                            li.menu__item
                                a(href="#").menu__link Новости

                    a.phone.header__phone(href="tel:080000000000") 0 800 000 000 00
