// ---- --- --- MIXINS --- --- --- ---
mixin tableElement(title, count, unit)
    .table__item
        .table__title=title
        .table__info
            .table__info-count=count
            .table__info-unit=unit
mixin star(text)
    .constellation__star
        .constellation__star-circle
        .constellation__star-text=text


